rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow writes only for authenticated users, and only in their own folder
    match /posts/{userId}/{imageId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow profile picture uploads for authenticated users in their own folder
    match /avatars/{userId}/{imageId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

     // Allow cover image uploads for authenticated users in their own folder
    match /covers/{userId}/{imageId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
