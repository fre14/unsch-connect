
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profile data. Allows anyone to create their own profile, but only the owner can read/write afterward.
     * @path /userProfiles/{userProfileId}
     */
    match /userProfiles/{userProfileId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      
      allow get: if isOwner(userProfileId);
      allow list: if false; // User listing is disabled for privacy.
      allow create: if isOwner(userProfileId);
      allow update, delete: if isOwner(userProfileId);
    }

    /**
     * @description Allow public read access to posts, but restrict creation, updates, and deletion to the post author.
     * @path /posts/{postId}
     */
    match /posts/{postId} {
      // Regla #1: Lectura pública para cualquier documento y la colección.
      allow read: if true;

      // Regla #2: La creación de posts solo para usuarios autenticados.
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      
      // Regla #3: La actualización y borrado solo para el autor del post.
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

     /**
      * @description Secure comments, allowing anyone to read, but only the author to create, update or delete.
      * @path /posts/{postId}/comments/{commentId}
      */
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    /**
     * @description Allows public read access to university announcements.
     * @path /announcements/{announcementId}
     */
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if false;
    }

    /**
     * @description Secure academic schedule data, allowing only the owner to read and write.
     * @path /userProfiles/{userProfileId}/academicSchedules/{academicScheduleId}
     */
    match /userProfiles/{userProfileId}/academicSchedules/{academicScheduleId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      allow read, write: if isOwner(userProfileId);
    }

    /**
     * @description Secure password reset tokens, allowing create, read and delete but imposing time and usage limits.
     * @path /passwordResetTokens/{tokenId}
     */
    match /passwordResetTokens/{tokenId} {
        allow read, create: if request.auth != null;
        allow delete: if false;
        allow list: if false;
        allow update: if false;
    }
  }
}
